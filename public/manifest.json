{
	"name": "Churn Button",
	"version": "1.2",
	"manifest_version": 2,

	"description": "Quickly add videos within the current browser tab to any of your Churn channels",
	"icons": {
		"19": "images/icon_19.png",
		"38": "images/icon_38.png",
		"128": "images/icon_128.png"
	},

	"browser_action": {
		"default_title": "Add videos to your channels",
		"default_icon": {
			"19": "images/icon_19.png",
			"38": "images/icon_38.png"
		},
		"default_popup": "/ext.html"
	},

	"permissions": [
		"tabs",
		"http://*/",
		"https://*/"
	],

	"homepage_url": "http://churn.tv"
}